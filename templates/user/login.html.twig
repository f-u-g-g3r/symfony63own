{% extends 'base.html.twig' %}
{% block body %}
    <div class="container mx-auto text-center">
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form action="{{ path('app_login') }}" method="post">
            <div id="login">
                <div class="divBottom">
                    <input type="text" id="username" class="input input-bordered w-full max-w-xs"
                           name="_username" value="{{ last_username }}" placeholder="Email" />
                </div>

                <div class="divBottom">
                    <input type="password" class="input input-bordered w-full max-w-xs"
                           id="password" name="_password" placeholder="Password" />
                </div>

                <input type="hidden" name="_target_path" value="/home">

                <button type="submit" class="btn btn-primary">login</button>
            </div>
        </form>

        <b><a href="/reg_user">Loo konto</a></b>
    </div>
{% endblock %}
